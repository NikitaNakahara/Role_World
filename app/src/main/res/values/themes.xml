<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoleWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:colorPrimaryDark">@color/header_bg</item>
        <item name="statusBarBackground">@color/header_bg</item>
        <item name="android:navigationBarColor">@color/window_bg</item>
        <item name="android:textColor">@color/contrast</item>
    </style>

    <style name="Theme.RoleWorld.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/window_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_anim</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.RoleWorld</item>
    </style>

    <style name="RoundImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>