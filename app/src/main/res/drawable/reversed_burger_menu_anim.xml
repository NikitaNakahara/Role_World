<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:width="50dp"
            android:height="50dp"
            android:viewportHeight="28"
            android:viewportWidth="28"
            android:autoMirrored="true">
            <group android:name="top_line"
                android:pivotX="4"
                android:pivotY="7">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M4,7C4,6.448 4.448,6 5,6H24C24.552,6 25,6.448 25,7C25,7.552 24.552,8 24,8H5C4.448,8 4,7.552 4,7Z"/>
            </group>
            <group android:name="center_line"
                android:pivotX="4"
                android:pivotY="14">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M4,14C4,13.448 4.448,13 5,13L16,13C16.552,13 17,13.448 17,14C17,14.552 16.552,15 16,15L5,15C4.448,15 4,14.552 4,14Z"/>
            </group>
            <group android:name="bottom_line"
                android:scaleX="1.1"
                android:translateX="-0.2"
                android:pivotX="5"
                android:pivotY="20">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M5,20C4.448,20 4,20.448 4,21C4,21.552 4.448,22 5,22H22C22.552,22 23,21.552 23,21C23,20.448 22.552,20 22,20H5Z"/>
            </group>
        </vector>
    </aapt:attr>

    <target android:name="top_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:propertyName="rotation"
                android:repeatCount="0"
                android:valueFrom="45"
                android:valueTo="0"/>
        </aapt:attr>
    </target>

    <target android:name="center_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:propertyName="scaleX"
                android:repeatCount="0"
                android:valueFrom="0.0"
                android:valueTo="1.0"/>
        </aapt:attr>
    </target>

    <target android:name="bottom_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:propertyName="rotation"
                android:repeatCount="0"
                android:valueFrom="-45"
                android:valueTo="0"/>
        </aapt:attr>
    </target>
</animated-vector>